<%- if controller_name != 'sessions' %>
  <%= link_to t('buttons.log_in'), new_session_path(resource_name), class: 'text-decoration-none' %><br />
<% end %>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t('buttons.oauth_log_in', provider: OmniAuth::Utils.camelize(provider_compact(provider))), omniauth_authorize_path(resource_name, provider),
      method: :post,  class: 'text-decoration-none'  %><br />
  <% end %>
<% end %>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('buttons.sign_up'), new_registration_path(resource_name), class: 'text-decoration-none' %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('views.users.password.forgot.question'), new_password_path(resource_name) %><br />
<% end %>
