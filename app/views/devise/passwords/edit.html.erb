<div class="container">
  <div class="row">
    <div class="col-md-6 mt-4">
      <h2 class="mb-4"><%= t('views.users.password.forgot.title') %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-outline mb-4">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
          <%= f.label :password, class: "form-label" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>

        <div class="form-outline mb-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
          <%= f.label :password_confirmation, t('views.users.password.confirm'), class: "form-label" %>
        </div>

        <div class="d-flex mt-4 mb-2">
          <%= f.submit t('views.users.password.action'),
            class: "btn btn-primary btn-block btn-lg gradient-custom-4" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
