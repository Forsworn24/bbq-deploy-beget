<p class="bg-secondary m-2 p-2 rounded-3 text-white">
  <span class="user-avatar">
    <%= image_tag(avatar(user), class: 'img-icon img-fluid rounded-circle', style: "width: 32px; height: 32px") %>
  </span>
  <% if request.path == user_path(user) %>
    <%= user.name %>
  <% else %>
    <%= link_to user.name, user_path(user), class: "text-decoration-none text-white fw-bold" %>
  <% end %>
</p>
