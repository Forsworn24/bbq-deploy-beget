<%= form_for [@event, subscription] do |f| %>
    <% unless user_signed_in? %>
        <div class="form-group">
          <%= f.label :user_name, t('activerecord.attributes.user.name') %>
          <%= f.text_field :user_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :user_email, t('activerecord.attributes.user.email') %>
          <%= f.text_field :user_email, class: 'form-control' %>
        </div>
    <% end %>

      <div class="actions my-2 text-end">
        <%= f.submit t('views.buttons.subscribe'), class: 'btn btn-primary' %>
      </div>
<% end %>
